<%= form_with model: [@trainer, @availability], class: 'contents' do |f| %>
  <% if @availability.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(@availability.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
        <% @availability.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='my-5'>
    <%= f.label :day_of_week %>
    <%= f.select :day_of_week, Availability.day_of_weeks.keys, { include_blank: true }, class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full' %>
  </div>

  <div class='my-5'>
    <%= f.label :start_time %>
    <%= f.time_select :start_time %>
  </div>

  <div class='my-5'>
    <%= f.label :end_time %>
    <%= f.time_select :end_time %>
  </div>

  <div class='inline'>
    <%= f.submit class: 'rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer' %>
  </div>
<% end %>
