<%= simple_form_for [@trainer, @availability], html: { class: 'contents' } do |f| %>
  <div class='my-5'>
    <%= f.association :trainer %>
    <%= f.input :day_of_week %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
  </div>

  <div class='inline'>
    <% if action_name == 'new' %>
      <%= f.submit 'Create availability', class: 'rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer' %>
    <% elsif action_name == 'edit' %>
      <%= f.submit 'Update availability', class: 'rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer' %>
    <% end %>
  </div>
<% end %>
