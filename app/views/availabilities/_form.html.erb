<%= form_with model: [@trainer, @availability], class: 'contents' do |f| %>
  <% if @availability.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(@availability.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
        <% @availability.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='my-5'>
    <%= f.label :day_of_week %>
    <%= f.select :day_of_week, [['Sunday', 0], ['Monday', 1], ['Tuesday', 2], ['Wednesday', 3], ['Thursday', 4], ['Friday', 5], ['Saturday', 6]], class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full' %>
    <%= inline_errors(@availability, :day_of_week) %>
  </div>

  <div class='my-5'>
    <%= f.label :start_time %>
    <div class='w-full mt-2'>
      <%= f.time_field :start_time, { value: Time.parse('9:00'),class: 'shadow rounded-md border border-gray-200 outline-none' } %>
    </div>
    <%= inline_errors(@availability, :start_time) %>
  </div>

  <div class='my-5'>
    <%= f.label :end_time %>
    <div class='w-full mt-2'>
      <%= f.time_field :end_time, { value: Time.parse('17:00'), class: 'shadow rounded-md border border-gray-200 outline-none' }  %>
    </div>
    <%= inline_errors(@availability, :end_time) %>
  </div>

  <div class='inline'>
    <%= f.submit class: 'rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer' %>
  </div>
<% end %>
