<%= form_with model: [@trainer, @availability], class: 'contents' do |f| %>
  <div class='my-5'>
    <%= f.label :day_of_week %>
    <%= f.select :day_of_week, Availability.day_of_weeks.keys, { include_blank: true }, class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full' %>
  </div>

  <div class='my-5'>
    <%= f.label :start_time %>
    <%= f.datetime_field :start_time, class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full' %>
  </div>

  <div class='my-5'>
    <%= f.label :end_time %>
    <%= f.datetime_field :end_time, class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full' %>
  </div>

  <div class='inline'>
    <% if action_name == 'new' %>
      <%= f.submit 'Create availability', class: 'rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer' %>
    <% elsif action_name == 'edit' %>
      <%= f.submit 'Update availability', class: 'rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer' %>
    <% end %>
  </div>
<% end %>
