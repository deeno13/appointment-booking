<%= form_with model: [@trainer, @appointment], class: 'contents' do |f| %>
  <% if @appointment.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(@appointment.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
        <% @appointment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='my-5'>
    <%= f.label :start_time %>
    <%= f.datetime_field :start_time, class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full' %>
    <% if @appointment.errors[:start_time].any? %>
      <% @appointment.errors.full_messages_for(:start_time) .each do |error| %>
        <p class="text-red-500 mt-1"><%= error %></p>
      <% end %>
    <% end %>
  </div>

  <div class='my-5'>
    <%= f.label :end_time %>
    <%= f.datetime_field :end_time, step: 3600, class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full' %>
    <% if @appointment.errors[:end_time].any? %>
      <% @appointment.errors.full_messages_for(:end_time) .each do |error| %>
        <p class="text-red-500 mt-1"><%= error %></p>
      <% end %>
    <% end %>
  </div>

  <div class='inline'>
    <%= f.submit class: 'rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer' %>
  </div>
<% end %>
