<div class='mx-auto md:w-2/3 w-full flex'>
  <div class='mx-auto'>
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    
    <%= render @trainer %>

    <%= link_to 'Book Appointment', new_trainer_appointment_path(@trainer), class: 'mt-2 rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium' %>
    <%= link_to 'Edit trainer', edit_trainer_path(@trainer), class: 'mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium' %>
    <div class='inline-block ml-2'>
      <%= button_to 'Destroy trainer', trainer_path(@trainer), method: :delete, class: 'mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium' %>
    </div>
    <%= link_to 'Back to trainers', trainers_path, class: 'ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium' %>
  </div>
</div>
